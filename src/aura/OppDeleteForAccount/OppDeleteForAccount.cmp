<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" controller="OppurtunityController" access="global" >
    <aura:attribute name="oppList" type="List"/>
    <!--<aura:attribute name= "recordId" type="Id" /> -->
    <aura:handler name="init" value="{!this}" action="c.getOppList"/>
    <lightning:card iconName="standard:opportunity" title="Opportunities">
        <p class="slds-p-horizontal_small">
         	<aura:iteration items="{!v.oppList}" var="opp">
                <lightning:recordViewForm recordId="{!opp.Id}" objectApiName="opp">
                    <div class="slds-box slds-theme_default">
                        <lightning:input type="checkbox" value="{!opp.Id}" label="Mark for Deletetion" aura:id="deleteOpp"/>  
                        <lightning:outputField fieldName="Id"/>  
                        <lightning:outputField fieldName="Name"/>  
                        <lightning:outputField fieldName="Amount"/>  
                        <lightning:outputField fieldName="StageName"/>  
                        <lightning:outputField fieldName="AccountId"/>
                    </div>                              
                </lightning:recordViewForm>
            </aura:iteration>
        </p>
        <aura:set attribute="actions">
            <lightning:button variant="destructive" label="Delete" onclick="{!c.deleteOpps}"/>
        </aura:set>
    
    </lightning:card>
	
</aura:component>